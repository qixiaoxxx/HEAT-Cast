<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/tiffany_1920_empty"
        tools:context=".ui.MainActivity">

        <TextView
            android:id="@+id/tv_device_name"
            android:layout_width="440px"
            android:layout_height="wrap_content"
            android:layout_marginStart="120px"
            android:layout_marginTop="60px"
            android:drawableLeft="@drawable/device_icon_size"
            android:drawablePadding="14px"
            android:gravity="center_vertical"
            android:text="CAST RECEIVER"
            android:textColor="@color/cast_color_F1F1F1"
            android:textSize="32px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/wifi_icon_size"
            android:drawablePadding="14px"
            android:gravity="center_vertical"
            android:text="CAST RECEIVER"
            android:textColor="@color/cast_color_F1F1F1"
            android:textSize="32px"
            app:layout_constraintStart_toEndOf="@id/tv_device_name"
            app:layout_constraintTop_toTopOf="@id/tv_device_name" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
