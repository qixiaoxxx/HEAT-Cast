<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/loadingdlg_bg"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:background="@drawable/dialog_bg"
	android:layout_centerInParent="true"
	android:padding="2dip"
    android:orientation="vertical" >

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#FF000000"
		android:padding="@dimen/margin"
		android:orientation="vertical" >

		<ProgressBar
			style="?android:attr/progressBarStyle"
			android:layout_width="180px"
			android:layout_height="60px" 
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="@dimen/margin"
			android:indeterminate="true"
			android:indeterminateDrawable="@anim/loading_anim"
			android:id="@+id/loadingbar"
			android:visibility="visible" />

		<ProgressBar
			style="?android:attr/progressBarStyleLarge"
			android:layout_width="180px"
			android:layout_height="60px" 
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="@dimen/margin"
			android:indeterminate="true"
			android:indeterminateDrawable="@anim/loading_anim"
			android:id="@+id/loadingbar2"
			android:visibility="gone" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:orientation="horizontal" >

			<ImageView
				android:id="@+id/loadingpic"
				android:layout_width="@dimen/title_large"
				android:layout_height="@dimen/title_large"
				android:layout_gravity="center_vertical"
				android:background="@drawable/logo"
				android:layout_marginRight="@dimen/margin" />
			<TextView
				android:id="@+id/loading_title_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:gravity="center_horizontal"
				android:textColor="#FFFFFF"
				android:textSize="@dimen/tsize_large"
				android:singleLine="true"
				android:ellipsize="marquee"
				android:text="@string/waxplayer_toast_loading" />
		</LinearLayout>

	</LinearLayout>

</LinearLayout>

