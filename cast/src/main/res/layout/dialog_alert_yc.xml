<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/adg_bgview"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"    
	android:background="@drawable/dialog_bg_yc"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/adg_title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:background="@drawable/dialog_bg_title_yc"
		android:gravity="center"
		android:textColor="#000000"
		android:textStyle="bold"
		android:paddingTop="@dimen/tsize_medium"
		android:paddingLeft="@dimen/margin"
		android:textSize="@dimen/title_medium"
		android:ellipsize="marquee"
		android:singleLine="true"
        android:focusable="false"
        android:text="TITLE" />

	<ScrollView 
		android:id="@+id/adg_messageP"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
        android:focusable="true"
		android:scrollbars="vertical" >

		<LinearLayout
			android:id="@+id/adg_root_view"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/adg_message"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/tsize_medium"
				android:textColor="#000000"
				android:textSize="@dimen/tsize_large"
				android:layout_gravity="center"
				android:gravity="center"
				android:focusable="false"
				android:text="MESSAGE" />

		</LinearLayout>

	</ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
		android:layout_marginTop="5dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:layout_marginBottom="20dp"
        android:orientation="horizontal" >

        <View
            android:id="@+id/adg_left_padding"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
			android:visibility="gone"
			android:layout_gravity="center"
            android:gravity="center"
			android:background="@android:color/transparent" />

        <Button
            android:id="@+id/adg_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:padding="@dimen/tsize_small"
			android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/dlg_button_yc"
            android:textSize="@dimen/tsize_medium"
			android:textStyle="bold"
			android:text="YES"
            android:background="@drawable/button_bg_yc" />

        <Button
            android:id="@+id/adg_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:padding="@dimen/tsize_small"
			android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/dlg_button_yc"
            android:textSize="@dimen/tsize_medium"
			android:textStyle="bold"
			android:text="NO"
            android:background="@drawable/button_bg_yc" />

        <View
            android:id="@+id/adg_right_padding"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
			android:visibility="gone"
			android:layout_gravity="center"
            android:gravity="center"
			android:background="@android:color/transparent" />

	</LinearLayout>

</LinearLayout>
