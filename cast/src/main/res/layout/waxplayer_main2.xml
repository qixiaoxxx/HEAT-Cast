<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/WholeLayout"
	android:background="#FF000000"
	android:soundEffectsEnabled="false"
    android:orientation="vertical" >

	<!-- For AdMob : DO NOT USE IT HERE!!! MISSING 'com.google.android.gms.ads.R$styleable' while initializing
	<com.google.android.gms.ads.AdView
		xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
        android:id="@+id/ad_view"
		android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-1572151478898418/7145145351" />
	 -->

    <RelativeLayout
        android:id="@+id/hostname_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="5dip"
		android:padding="3dip"
        android:background="#3D99CCCC"
		android:visibility="gone"
        android:orientation="horizontal" >

		<RelativeLayout
			android:id="@+id/hostnameTextLayout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true" >

			<TextView
				android:id="@+id/hostnameText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="#00000000"
				android:gravity="center"
				android:textColor="#FFFFFFFF"
				android:textSize="@dimen/tsize_smallest"
				android:layout_centerVertical="true"
				android:singleLine="true" />
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/hostnameTextLayout"
			android:layout_centerVertical="true"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/hostnameText2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="#00000000"
				android:layout_gravity="left"
				android:layout_marginLeft="5dip"
				android:gravity="left|center_vertical"
				android:visibility="gone"
				android:textColor="#FFFFFFFF"
				android:textSize="@dimen/tsize_smallest"
				android:textStyle="bold"
				android:layout_weight="1"
				android:singleLine="true" />
			
			<TextView
				android:id="@+id/timetickText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/hostnameText2"
				android:background="#00000000"
				android:layout_gravity="left"
				android:gravity="left|center_vertical"
				android:visibility="gone"
				android:textColor="#FFFFFFFF"
				android:textSize="@dimen/tsize_smallest"
				android:textStyle="bold"
				android:layout_weight="1"
				android:singleLine="true" />
		</RelativeLayout>

	</RelativeLayout>

	<ImageView
        android:id="@+id/ad_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/adview2"
		android:visibility="gone" />

    <com.waxrain.video.HDVideoView
        android:id="@+id/HDVideoView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:layout_centerInParent="true" />
    <com.waxrain.video.SDVideoView
        android:id="@+id/SDVideoView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:layout_centerInParent="true" />
	<com.waxrain.video.GalleryView 
		android:id="@+id/GalleryView" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="@android:color/background_dark"
        android:focusable="false"
		android:layout_centerInParent="true"/>
	<com.waxrain.video.HDImageView
		android:id="@+id/HDImageView" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:background="@android:color/background_dark"
        android:focusable="false"
		android:layout_centerInParent="true"/>
    <com.waxrain.video.SDNativeView
        android:id="@+id/SDNativeView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="false"
        android:layout_centerInParent="true" />

	<TextView
		android:id="@+id/borderTop"
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_alignParentTop="true"
		android:background="#FF000000"
		android:text="" />
	<TextView
		android:id="@+id/borderBottom"
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_alignParentBottom="true"
		android:background="#FF000000"
		android:text="" />
	<TextView
		android:id="@+id/borderLeft"
		android:layout_width="1dp"
		android:layout_height="fill_parent"
		android:layout_alignParentLeft="true"
		android:background="#FF000000"
		android:text="" />
	<TextView
		android:id="@+id/borderRight"
		android:layout_width="1dp"
		android:layout_height="fill_parent"
		android:layout_alignParentRight="true"
		android:background="#FF000000"
		android:text="" />

	<LinearLayout
		android:id="@+id/music_metadata_layout"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
        android:gravity="center_vertical"
		android:visibility="gone"
		android:focusable="false"
		android:orientation="horizontal" >

		<ImageView 
			android:id="@+id/music_cover"
			android:layout_width="300px"
			android:layout_height="300px"
			android:scaleType="fitXY"
			android:background="@drawable/album_def" />

		<LinearLayout
			android:id="@+id/music_metainfo"
			android:padding="@dimen/margin"
			android:orientation="vertical"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
		    android:background="@drawable/toast_bg" >

			<TextView
				android:id="@+id/music_title"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:gravity="center"
				android:textSize="@dimen/tsize_large" 
				android:layout_weight="1" 
				android:ellipsize="marquee"
				android:textStyle="bold"
				android:textColor="#FFFFFFFF"
				android:singleLine="true" />

			<TextView
				android:id="@+id/music_artist"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:gravity="center"
				android:textSize="@dimen/tsize_medium" 
				android:textColor="#FFDDDDDD"
				android:layout_weight="1" 
				android:ellipsize="marquee"
				android:singleLine="true" />

			<TextView
				android:id="@+id/music_album"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:gravity="center"
				android:textSize="@dimen/tsize_medium" 
				android:textColor="#FFDDDDDD"
				android:layout_weight="1" 
				android:ellipsize="marquee"
				android:singleLine="true" />

			<TextView
				android:id="@+id/music_lyric1"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:gravity="center"
				android:textSize="@dimen/tsize_medium" 
				android:textColor="#FFEEEEEE"
				android:layout_marginTop="@dimen/title_large"
				android:layout_weight="1" 
				android:ellipsize="marquee"
				android:singleLine="true" />
			<TextView
				android:id="@+id/music_lyric2"
				android:layout_width="match_parent" 
				android:layout_height="wrap_content" 
				android:gravity="center"
				android:textSize="@dimen/tsize_small" 
				android:textColor="#FFBBBBBB"
				android:layout_weight="1" 
				android:ellipsize="marquee"
				android:singleLine="true" />

		</LinearLayout>

	</LinearLayout>

	<TextView
		android:id="@+id/debugText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:background="#CC000000"
		android:textColor="#FFFFFFFF"
		android:textSize="@dimen/tsize_small"
		android:scrollbars="vertical"
		android:scrollbarStyle="insideOverlay"
		android:scrollbarFadeDuration="500"
		android:text=""
		android:visibility="gone"
		android:singleLine="false" />

    <LinearLayout
        android:id="@+id/ctrl_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80000000"
		android:padding="3dip"
        android:gravity="center_horizontal"
		android:visibility="invisible"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ctrl_progress_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
			android:layout_marginTop="1dip"
			android:layout_marginBottom="2dip"
            android:orientation="horizontal" >

			<SeekBar
                android:id="@+id/progressbar"
				android:progressDrawable="@drawable/seekbar_style"
				android:thumb="@drawable/seekbar_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
				android:minHeight="4dp"
				android:maxHeight="4dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/ctrl_button_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

			<LinearLayout
				android:id="@+id/ctrl_button_layout_btns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical">

				<ImageButton
                    android:id="@+id/playbutton"
                    android:layout_width="@dimen/playctlbtn"
                    android:layout_height="@dimen/playctlbtn"
					android:scaleType="fitXY"
                    android:focusable="true"
                    android:layout_margin="@dimen/margin2"
					android:gravity="center_vertical"
                    android:background="@drawable/play" />
                <ImageButton
                    android:id="@+id/stopbutton"
                    android:layout_width="@dimen/playctlbtn"
                    android:layout_height="@dimen/playctlbtn"
					android:scaleType="fitXY"
                    android:layout_margin="@dimen/margin2"
                    android:focusable="true"
					android:gravity="center_vertical"
                    android:background="@drawable/stop" />
                <ImageButton
                    android:id="@+id/mutebutton"
                    android:layout_width="@dimen/playctlbtn"
                    android:layout_height="@dimen/playctlbtn"
					android:scaleType="fitXY"
                    android:layout_margin="@dimen/margin2"
                    android:focusable="true"
					android:gravity="center_vertical"
                    android:background="@drawable/mute2" />
				<ImageButton
                    android:id="@+id/scalebutton"
                    android:layout_width="@dimen/playctlbtn"
                    android:layout_height="@dimen/playctlbtn"
					android:scaleType="fitXY"
                    android:layout_margin="@dimen/margin2"
                    android:focusable="true"
					android:gravity="center_vertical"
                    android:background="@drawable/scale" />
                 <ImageButton
                    android:id="@+id/patternbutton"
                    android:layout_width="@dimen/playctlbtn"
                    android:layout_height="@dimen/playctlbtn"
					android:scaleType="fitXY"
                    android:layout_margin="@dimen/margin2"
                    android:focusable="true"
					android:gravity="center_vertical"
                    android:background="@drawable/pattern" />
 				<ImageButton
                    android:id="@+id/settingbutton"
                    android:layout_width="@dimen/playctlbtn"
                    android:layout_height="@dimen/playctlbtn"
					android:scaleType="fitXY"
                    android:layout_margin="@dimen/margin2"
                    android:focusable="true"
					android:gravity="center_vertical"
                    android:background="@drawable/setting" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ctrl_showtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
				android:layout_toLeftOf="@+id/ctrl_button_layout_btns"
                android:layout_gravity="left|center_vertical">

				<TextView
                    android:id="@+id/currentpos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:textSize="@dimen/tsize_large"
		            android:layout_marginLeft="@dimen/margin2"
					android:gravity="center_vertical"
					android:textColor="#FFFFFFFF"
                    android:text="00:00:00" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:textSize="@dimen/tsize_large"
                    android:layout_marginLeft="1dp"
					android:textColor="#FFFFFFFF"
					android:gravity="center_vertical"
                    android:text="/" />
                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
					android:textSize="@dimen/tsize_large"
                    android:layout_marginLeft="1dp"
					android:textColor="#FFFFFFFF"
					android:gravity="center_vertical"
                    android:text="00:00:00" />
            </LinearLayout>

			<LinearLayout
				android:id="@+id/ctrl_playspeed_layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/ctrl_button_layout_btns"
				android:layout_gravity="right|center_vertical"
				android:orientation="horizontal"
				android:visibility="gone" >

				<ImageButton
					android:id="@+id/ctrl_playspeed_icon"
                    android:layout_width="@dimen/playctlbtn"
                    android:layout_height="@dimen/playctlbtn"
					android:scaleType="fitXY"
                    android:layout_margin="@dimen/margin2"
                    android:focusable="true"
					android:gravity="center_vertical"
					android:background="@drawable/speed" />
				<TextView
					android:id="@+id/ctrl_playspeed_list"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/tsize_large"
					android:textColor="#FFBBBBBB"
					android:paddingLeft="0dip"
					android:layout_gravity="center_vertical"
					android:gravity="center_vertical"
					android:text="1X" />
			</LinearLayout>

        </FrameLayout>

	</LinearLayout>

    <RelativeLayout
        android:id="@+id/srt_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/tsize_small"
        android:background="#00000000"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

		<TextView
			android:id="@+id/srtText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
	        android:background="#00000000"
			android:gravity="center"
			android:textColor="#FFFFFFFF"
			android:textSize="@dimen/title_large"
			android:text=""
			android:singleLine="false" />
	</RelativeLayout>

	<ImageView 
		android:id="@+id/hws_wlan_imageview"
		android:visibility="gone"
		android:layout_alignParentEnd="true"
		android:layout_marginTop="10dp"
		android:layout_marginEnd="20dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

</RelativeLayout>
