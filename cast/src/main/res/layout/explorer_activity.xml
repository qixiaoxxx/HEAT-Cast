<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
	android:orientation="vertical"
	android:background="#CC000000" >

	<RelativeLayout 
		android:id="@+id/all_title_layout"
		android:layout_width="match_parent"
		android:layout_height="45dip"
		android:layout_alignParentTop="true"
		android:background="@drawable/title_bg" >

		<ImageView 
			android:id="@+id/btn_pre"
			android:layout_width="41dp"
			android:layout_height="41dp"
			android:paddingLeft="6dip"
			android:gravity="center"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			android:src="@drawable/logo" />

		<RelativeLayout 
			android:id="@+id/pathname_layout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dip"
			android:paddingRight="10dip"
			android:layout_toRightOf="@+id/btn_pre"
			android:layout_centerVertical="true" 
			>
			<TextView 
				android:id="@+id/pathname"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFF"
				android:text=""
				android:gravity="left|center_vertical"
				android:textSize="18sp"
				android:singleLine="true"
				android:ellipsize="start"
				android:textStyle="bold"
				/>
		</RelativeLayout>

	</RelativeLayout>

	<RelativeLayout 
		android:id="@+id/explorer_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:background="#FF000000"
	   	android:layout_below="@+id/all_title_layout" >

		<FrameLayout 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_alignParentBottom="true"
			>
			<ListView
				android:id="@+id/listview"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:divider="#222222"
				android:dividerHeight="1dp"
				android:visibility="gone"
				android:focusable="false"
				android:cacheColorHint="#00EEEEEE"
				>
			</ListView>
			<ListView
				android:id="@+id/devicelist"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:divider="#222222"
				android:dividerHeight="1dp"
				android:focusable="false"
				android:cacheColorHint="#00EEEEEE"
				>
			</ListView>
	
		</FrameLayout>

	</RelativeLayout>

</RelativeLayout>