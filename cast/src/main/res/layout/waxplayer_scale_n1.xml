<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scaledlg_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@drawable/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/scale_title_text"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_large"
		android:background="@drawable/dialog_bg_title"
		android:gravity="center_vertical"
		android:textColor="#FFFFFF"
		android:paddingLeft="@dimen/margin"
		android:textSize="@dimen/tsize_large"
		android:ellipsize="marquee"
		android:singleLine="true"
        android:text="TITLE" />

    <LinearLayout
        android:id="@+id/scale_main_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

		<RadioGroup
			android:id="@+id/scaleRadio"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="center_vertical"
			android:orientation="vertical" >

			<RadioButton
				android:id="@+id/stretchmode"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:textSize="@dimen/tsize_large"
				android:textColor="@color/radiobutton"
				android:layout_weight="1" />

			<RadioButton
				android:id="@+id/scalemode"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:textSize="@dimen/tsize_large"
				android:textColor="@color/radiobutton"
				android:layout_weight="1" />

			<RadioButton
				android:id="@+id/zoommode"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:textSize="@dimen/tsize_large"
				android:textColor="@color/radiobutton"
				android:layout_weight="1" />

		</RadioGroup>

	</LinearLayout>

    <TextView
        android:id="@+id/scale_title_text2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_large"
		android:background="@drawable/dialog_bg_title"
		android:gravity="center_vertical"
		android:textColor="#FFFFFF"
		android:paddingLeft="@dimen/margin"
		android:textSize="@dimen/tsize_large"
		android:ellipsize="marquee"
		android:singleLine="true"
        android:text="TITLE" />

    <LinearLayout
        android:id="@+id/scale_control_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

		<CheckBox
			android:id="@+id/fullscreenmode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:textSize="@dimen/tsize_large"
			android:textColor="@color/radiobutton"
			android:layout_weight="1" />

		<CheckBox
			android:id="@+id/lockmode"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:textSize="@dimen/tsize_large"
			android:textColor="@color/radiobutton"
			android:layout_weight="1" />

	</LinearLayout>

</LinearLayout>
