<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/bgRootLayout"
    android:orientation="vertical"
	android:background="#DD000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<com.ant.liao.GifView
		android:id="@+id/bgSetting"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_centerInParent="true"
		android:background="@drawable/settings_item_bg2"
		android:visibility="gone" />
	<ImageView
        android:id="@+id/bgSetting2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:scaleType="fitCenter"
        android:layout_centerInParent="true"
		android:background="@drawable/settings_item_bg2"
		android:visibility="gone" />

	<TextView 
        android:id="@+id/btTextNotice_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_margin="4dp"
        android:layout_alignParentTop="true"
		android:textSize="@dimen/tsize_medium"
		android:textColor="#dddddd"
		android:background="@drawable/bg_textview_corner"
		android:visibility="gone" />
	<com.waxrain.droidsender.delegate.TextSwitcherView
        android:id="@+id/btTextNotice2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:layout_margin="4dp"
        android:layout_alignParentBottom="true"
		android:background="@drawable/bg_textview_corner" />
	<TextView 
        android:id="@+id/btTextNotice1_home"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#dddddd"
		android:background="@drawable/bg_textview_corner"
		android:text=""
        android:layout_alignParentRight="true"
		android:layout_above="@id/btTextNotice2"
		android:gravity="left|center_vertical"
		android:textSize="@dimen/tsize_medium"
		android:layout_marginRight="4dp" />
	<ImageView
        android:id="@+id/bgQrCode_home"
        android:layout_width="300px"
        android:layout_height="300px"
		android:scaleType="fitCenter"
		android:layout_toLeftOf="@+id/btTextNotice1_home"
		android:layout_above="@id/btTextNotice2"
		android:layout_marginRight="4dp"
		android:visibility="gone" />
	<TextView 
        android:id="@+id/btTextNotice1_office"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#dddddd"
		android:background="@drawable/bg_textview_corner"
		android:text=""
        android:layout_alignParentLeft="true"
		android:layout_above="@id/btTextNotice2"
		android:gravity="left|center_vertical"
		android:textSize="@dimen/tsize_medium"
		android:layout_marginLeft="4dp" />
	<ImageView
        android:id="@+id/bgQrCode_office"
        android:layout_width="200px"
        android:layout_height="200px"
		android:scaleType="fitCenter"
		android:layout_toRightOf="@+id/btTextNotice1_office"
		android:layout_above="@id/btTextNotice2"
		android:layout_marginLeft="4dp"
		android:visibility="gone" />

    <LinearLayout
        android:id="@+id/titleInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
		android:visibility="gone"
        android:orientation="horizontal" >

		<ImageView
			android:id="@+id/titleInfoLayout_icon1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
			android:background="@drawable/set_icon_dev"
			android:layout_marginRight="15px"
			android:visibility="gone"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/titleInfoLayout_label1"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
            android:layout_gravity="center_vertical"
			android:textColor="#ffffff"
			android:text=""
			android:textSize="@dimen/tsize_medium"
			android:singleLine="true"
			android:layout_marginRight="4dp" />
		<TextView
			android:id="@+id/titleInfoLayout_text1"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
            android:layout_gravity="center_vertical"
			android:gravity="left"
			android:textColor="#ffffff"
			android:text=""
			android:textSize="@dimen/tsize_medium"
			android:singleLine="true"
			android:ellipsize="marquee"
			android:layout_marginRight="30dp" />

		<ImageView
			android:id="@+id/titleInfoLayout_icon2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
			android:background="@drawable/set_icon_wifi"
			android:layout_marginRight="15px"
			android:visibility="gone"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/titleInfoLayout_label2"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
            android:layout_gravity="center_vertical"
			android:textColor="#ffffff"
			android:text=""
			android:textSize="@dimen/tsize_medium"
			android:singleLine="true"
			android:layout_marginRight="4dp" />
		<TextView
			android:id="@+id/titleInfoLayout_text2"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
            android:layout_gravity="center_vertical"
			android:gravity="left"
			android:textColor="#ffffff"
			android:text=""
			android:singleLine="true"
			android:ellipsize="marquee"
			android:textSize="@dimen/tsize_medium" />

	</LinearLayout>

    <LinearLayout
        android:id="@+id/btStepGuide"
        android:layout_width="fill_parent"
        android:layout_height="500px"
        android:layout_alignParentBottom="true"
        android:background="#D05F6A70"
		android:padding="10px"
		android:visibility="gone"
        android:orientation="horizontal" >

		<View
			android:layout_width="0dp"
			android:layout_height="fill_parent"
            android:layout_weight="0.3" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
            android:layout_weight="1"
			android:background="@drawable/step_guide_bg"
			android:orientation="vertical" >

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="0dp"
	            android:layout_gravity="center_horizontal"
				android:background="@drawable/step_guide_icon1"
	            android:layout_weight="2"
				android:scaleType="fitCenter" />
			<TextView
		        android:id="@+id/step_guide_txt1"
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:paddingLeft="10px"
				android:paddingRight="10px"
				android:paddingBottom="5px"
				android:textColor="#EEEEEE"
				android:textSize="@dimen/tsize_smallest"
	            android:layout_weight="2" />
			<ImageView
		        android:id="@+id/step_guide_img1"
				android:layout_width="wrap_content"
				android:layout_height="0dp"
	            android:layout_gravity="center_horizontal"
	            android:layout_weight="3"
				android:paddingTop="5px"
				android:paddingLeft="10px"
				android:paddingRight="10px"
				android:paddingBottom="10px"
				android:scaleType="fitCenter" />

		</LinearLayout>

		<TextView
			android:layout_width="0dp"
			android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
			android:gravity="center"
            android:layout_weight="0.2"
			android:textColor="#EEEEEE"
			android:textSize="@dimen/tsize_large"
			android:singleLine="true"
			android:text="&#62;&#62;" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
            android:layout_weight="1"
			android:background="@drawable/step_guide_bg"
			android:orientation="vertical" >

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="0dp"
	            android:layout_gravity="center_horizontal"
				android:background="@drawable/step_guide_icon2"
	            android:layout_weight="2"
				android:scaleType="fitCenter" />
			<TextView
		        android:id="@+id/step_guide_txt2"
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:paddingLeft="10px"
				android:paddingRight="10px"
				android:paddingBottom="5px"
				android:textColor="#EEEEEE"
				android:textSize="@dimen/tsize_smallest"
	            android:layout_weight="5" />

		</LinearLayout>

		<TextView
			android:layout_width="0dp"
			android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
			android:gravity="center"
            android:layout_weight="0.2"
			android:textColor="#EEEEEE"
			android:textSize="@dimen/tsize_large"
			android:singleLine="true"
			android:text="&#62;&#62;" />

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
            android:layout_weight="1"
			android:background="@drawable/step_guide_bg"
			android:orientation="vertical" >

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="0dp"
	            android:layout_gravity="center_horizontal"
				android:background="@drawable/step_guide_icon3"
	            android:layout_weight="2"
				android:scaleType="fitCenter" />
			<TextView
		        android:id="@+id/step_guide_txt3"
				android:layout_width="fill_parent"
				android:layout_height="0dp"
				android:paddingLeft="10px"
				android:paddingRight="10px"
				android:paddingBottom="5px"
				android:textColor="#EEEEEE"
				android:textSize="@dimen/tsize_smallest"
	            android:layout_weight="5" />

		</LinearLayout>

		<View
			android:layout_width="0dp"
			android:layout_height="fill_parent"
            android:layout_weight="0.3" />

	</LinearLayout>

</RelativeLayout>