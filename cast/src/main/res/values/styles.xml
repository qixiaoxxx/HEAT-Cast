<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme" />

	<style name="About_dialog" parent="android:Animation" mce_bogus="3">
	    <item name="android:windowEnterAnimation">@anim/about_enter_anim</item>
	    <item name="android:windowExitAnimation">@anim/about_exit_anim</item>
	</style>

	<style name="WaxDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowEnterAnimation">@anim/about_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/about_exit_anim</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

	<style name="WaxDialog2" parent="android:style/Theme.Dialog">
		<item name="android:windowEnterAnimation">@anim/about_enter_anim</item>
		<item name="android:windowExitAnimation">@anim/about_exit_anim</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowFrame">@null</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

	<style name="windownotitle" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
	</style> 

    <style name="setting_title_style_landscape">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#F37324</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textSize">@dimen/tsize_large</item>
    </style>

    <style name="setting_layout_style_landscape">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">@dimen/margin</item>
        <item name="android:paddingRight">@dimen/margin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/settings_item_bg</item>
    </style>

    <style name="setting_icon_style_landscape">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="setting_sub_title_style_landscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/tsize_large</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
	</style>

    <style name="setting_content_style_landscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:textColor">#90ffffff</item>
        <item name="android:textSize">@dimen/tsize_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="setting_switch_btn_style_landscape">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_tag_style_landscape">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/tsize_smallest</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:text">@string/set_experimental</item>
        <item name="android:background">@drawable/tag_bg</item>
    </style>

</resources>